/*TestCase 5: to test type conversions, floats */

float delta = 1.0;


int floor(float num)
{
  int temp;
  temp = num;
  return temp;
}


int ceil(float num)
{
 int temp;
 if (num > 0) /* convert from int to float */
  {
    temp = num + delta;
  }
 else 
   {
     temp = num - delta;
   }
 return temp;
}


float absf(float num)
{
  float  temp;
  if (num < 0)
    {
      temp = 0 - num;
    }
  else
    {
      temp = num;
    }
  return temp;
}


int main()
{
  float num;
  float midp;
 
  write("Enter number "); 
  
  num = fread(); 
  
  write(absf(num));
  write("\n");
  write(ceil(num));
  write("\n");
  write(floor(num));
  write("\n");
  midp = (ceil(num) + floor(num))/2.0;
  write(midp);
  write("\n");

  return 1;
}

