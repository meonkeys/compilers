/* Testcase 12: Binary Search */

int A[11];


int BinarySearch(int tofind)
{
 int low,high;
 int mid;

 low = 0;
 high = 10;

 mid = (low+high)/2;

 while(low <= high) {
	if (A[mid] == tofind) {
		write("\nThe integer is located at index : ");
		write(mid); 
		write("\n");
		return 1;
	} else {
		if (A[mid] > tofind) {
			high = mid-1;
		} else {
			low = mid+1;
		}
	}
	mid = (low+high)/2;
	
 }

 write("\nThe integer ");
 write(tofind); 
 write(" is not present in the Array\n");
 return 0;
}
 

int main()
{
 int i,index,tofind;

 /* Initializing Array A */
 for (i = 0; i < 11; i = i + 1)
 {
  A[i] = 2*i;
 }

 write("\nEnter the integer number to be searched : ");
 tofind = read(); 
 
 BinarySearch(tofind);
 
 return 1;
}

